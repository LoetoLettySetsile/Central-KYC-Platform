<!DOCTYPE html>
<html>
<head>
  <title>Admin Analytics</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin-home">Admin Portal</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" href="/admin/view-users">View All Users</a></li>
          <li class="nav-item"><a class="nav-link active" href="/admin/system-logs">System Logs</a></li>
        </ul>
        <a href="/logout" class="btn btn-outline-light">Logout</a>
      </div>
    </div>
  </nav>
  <h2 class="mb-4">üìä KYC Analytics Dashboard</h2>

  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-bg-primary">
        <div class="card-body">
          <h5>Total Customers</h5>
          <h2><%= users %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-bg-success">
        <div class="card-body">
          <h5>Total Documents Uploaded</h5>
          <h2><%= docs %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-bg-warning">
        <div class="card-body">
          <h5>Expired Documents</h5>
          <h2><%= expired %></h2>
        </div>
      </div>
    </div>
  </div>

  <h4>üìÅ Documents Uploaded by Type</h4>
  <table class="table table-bordered">
    <thead><tr><th>Type</th><th>Count</th></tr></thead>
    <tbody>
      <% docsPerType.forEach(row => { %>
        <tr><td><%= row.type %></td><td><%= row.count %></td></tr>
      <% }) %>
    </tbody>
  </table>

  <h4 class="mt-5">‚ö†Ô∏è Mandatory Document Requirements by Organization</h4>
  <table class="table table-bordered">
    <thead><tr><th>Organization</th><th>Required Document</th></tr></thead>
    <tbody>
      <% compliance.forEach(row => { %>
        <tr><td><%= row.organization %></td><td><%= row.document_type %></td></tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
