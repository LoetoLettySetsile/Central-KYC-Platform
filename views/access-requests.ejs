<h1>Manage Organization Access Requests</h1>

<% if (requests.length === 0) { %>
  <p>No access requests at the moment.</p>
<% } else { %>
  <% requests.forEach(req => { %>
    <div class="request-card">
      <p><strong>Organization:</strong> <%= req.organization_name %></p>
      <p><strong>Purpose:</strong> <%= req.purpose || 'Not specified' %></p>
      <p><strong>Status:</strong> <%= req.status %></p>
      <p><strong>Requested At:</strong> <%= new Date(req.requested_at).toLocaleString() %></p>

      <% if (req.status === 'pending') { %>
        <form action="/approve-access-request" method="POST">
        <input type="hidden" name="requestId" value="<%= req.id %>">
          <% req.customer_documents.forEach(doc => { %>
            <div class="mb-2 border rounded p-2">
              <p><strong><%= doc.name %></strong></p>
              <input type="checkbox" name="docs[]" value="<%= doc.id %>"> Grant Access
              <select name="access_level_<%= doc.id %>" class="form-select form-select-sm mt-1">
                <option value="read-only">Read-Only</option>
                <option value="download">Download</option>
                <option value="view-metadata">View Metadata</option>
              </select>
            </div>
          <% }) %>
          <button type="submit" class="btn btn-success">✅ Approve</button>
        </form>
        <form action="/reject-access-request" method="POST">
          <input type="hidden" name="requestId" value="<%= req.id %>">
          <button type="submit">❌ Reject</button>
        </form>
      <% } else if (req.status === 'approved') { %>
        <form action="/revoke-access" method="POST">
          <input type="hidden" name="requestId" value="<%= req.id %>">
          <button type="submit">⛔ Revoke Access</button>
        </form>
      <% } else { %>
        <p>Request has been <%= req.status %>.</p>
      <% } %>
    </div>
  <% }) %>
<% } %>
