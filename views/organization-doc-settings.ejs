<!DOCTYPE html>
<html>
<head>
  <title>Document Requirements</title>
  <style>
    body { font-family: Arial; padding: 2em; background: #f4f4f4; }
    .container { display: flex; gap: 2em; }
    .form-box, .summary-box {
      background: #fff; padding: 1.5em; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      flex: 1;
    }
    .req-row { margin-bottom: 1em; display: flex; gap: 1em; align-items: center; }
    select, input[type="number"] { padding: 0.4em; width: 150px; }
    button { padding: 0.6em 1em; margin-top: 1em; }
    table { width: 100%; margin-top: 1em; border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 0.5em; }
  </style>
</head>
<body>
    <nav>
    <a href="/organization-home">Home</a>
    <a href="/logout">Logout</a>
  </nav>

  <h2>Define Required Documents</h2>
  <div class="container">

    <!-- Form -->
    <div class="form-box">
      <form method="POST" action="/organization-doc-settings">
        <input type="hidden" name="organization_id" value="<%= orgId %>">

        <div id="requirements">
          <div class="req-row">
            <select name="document_type_id[]" required>
              <% docTypes.forEach(doc => { %>
                <option value="<%= doc.id %>"><%= doc.name %></option>
              <% }) %>
            </select>

            <label><input type="checkbox" name="mandatory[]"> Mandatory</label>

            <input type="number" name="valid_for_days[]" placeholder="Valid days" min="1" required>

            <button type="button" onclick="this.parentElement.remove()">Remove</button>
          </div>
        </div>

        <button type="button" onclick="addRow()">+ Add Requirement</button><br>
        <button type="submit">Save All</button>
      </form>
    </div>

    <!-- Summary -->
    <div class="summary-box">
      <h4>Current Requirements</h4>
      <% if (requirements.length > 0) { %>
        <table>
          <tr>
            <th>Document</th>
            <th>Mandatory</th>
            <th>Valid Days</th>
          </tr>
          <% requirements.forEach(r => { %>
            <tr>
              <td><%= r.doc_name %></td>
              <td><%= r.mandatory ? 'Yes' : 'No' %></td>
              <td><%= r.valid_for_days %></td>
            </tr>
          <% }) %>
        </table>
      <% } else { %>
        <p>No document requirements set yet.</p>
      <% } %>
    </div>

  </div>

  <script>
    function addRow() {
      const docTypes = `<%= JSON.stringify(docTypes) %>`;
      const parsed = JSON.parse(docTypes);

      const div = document.createElement('div');
      div.className = 'req-row';

      let options = '';
      parsed.forEach(d => {
        options += `<option value="${d.id}">${d.name}</option>`;
      });

      div.innerHTML = `
        <select name="document_type_id[]" required>${options}</select>
        <label><input type="checkbox" name="mandatory[]"> Mandatory</label>
        <input type="number" name="valid_for_days[]" placeholder="Valid days" min="1" required>
        <button type="button" onclick="this.parentElement.remove()">Remove</button>
      `;

      document.getElementById('requirements').appendChild(div);
    }
  </script>

</body>
</html>
